{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
{% block body %}
    {% if libro.id is null %}
        <h2>Introducir datos del nuevo libro</h2>
    {% else %}
        <h2>Modificar datos del libro</h2>
    {% endif %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="{{ path('libro_listar') }}" class="btn btn-secondary">Volver</a>
    {{ form_end(form) }}
{% endblock %}